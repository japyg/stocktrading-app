<div class="results-block">
  <%= render 'layouts/messages' %>
</div>

<% if @stock %>
  <div class="card card-header results-block">
    <strong>Symbol: </strong> <%= @stock.stock_symbol %>
    <strong>Name: </strong> <%= @stock.company_name %>
    <strong>Price: </strong> <%= @stock.current_price%>
    <% if current_user.can_track_stock?(@stock.stock_symbol) %>
      <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, stock_symbol: @stock.stock_symbol),
                                    class: "btn btn-sm btn-success", method: :post %>
    <% else %>
      <span class="badge badge-secondary">
        You are already tracking
       
        <% if current_user.stock_already_tracked?(@stock.stock_symbol) %>
          this stock
        <% end %>
      </span>
    <% end %>
  </div>
<% end %>