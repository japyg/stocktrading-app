<div class="row">
  <div class="col-9">  
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Ticker</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @tracked_stocks.each do |stock| %>
          <tr>
            <th scope="row"><%= stock.stock_symbol %></th>
            <td><%= stock.company_name %></td>
            <td><%= stock.current_price %></td>
            <td><% if current_user.can_track_stock?(stock.stock_symbol) %>
                  <%= link_to 'Add to portfolio', user_stocks_path(user: current_user, stock_symbol: stock.stock_symbol),
                                    class: "btn btn-sm btn-success", method: :post %>
                <% elsif current_user.id != @user.id %>
                  <span class="badge badge-secondary">
                    You are already tracking
                    
                    <% if current_user.stock_already_tracked?(stock.stock_symbol) %>
                      this stock
                    <% end %>
                  </span>
                <% end %>
              <% if current_user.id == @user.id %>
                <%= link_to 'Remove', user_stock_path(stock), method: :delete, data: {confirm: 'Are you sure?'},
                                          class: 'btn btn-sm btn-warning' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>